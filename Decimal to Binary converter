#include <stdio.h>

int main(void)
{
    unsigned long long int userInput;
    long long int i;
    unsigned long long int binary[64];

    printf("Enter a number from 0 to 18,446,744,073,709,551,615: ");
    scanf("%llu", &userInput);

    printf("\nThe binary value of %llu is: ", userInput);

    if (userInput == 0)
    {
        printf("0");
    }
    else
    {
        for (i = 0; userInput > 0; i++)
        {
            binary[i] = userInput%2;
            userInput = userInput/2;
        }
        for (i -= 1; i >= 0; i--)
        {
            printf("%llu", binary[i]);
        }
    }

    printf("\n");

    return 0;
}
